<div class="row">
  <h4>Now showing <%= @player.username %>'s game #<%= @this_game['id'] %></h4>

  <ul>
    <li>Date Created: <%= @this_game.created_at.strftime('%A, %B %d, %Y') %></li>
    <li>Correct Answers: <%= @this_game.correct_answers %></li>
    <li>Final Score: <%= @this_game.final_score %></li>
  </ul>
</div>

<h2><%= Game.get_clues.length %></h2>

<div class="row">
  <div class="col-md-3 col" style="margin-left: 25px;">

    <% @clue.each do |hash| %>
        <% hash_keys = hash.keys %>
        <% hash_keys.each do |key| %>

            <% if key == :category_name %>
                <h2> <%= hash[key] %> </h2>
            <% else %>
                <p> <%= hash[:airdate] %></p>
                <p> <%= hash[:question] %></p>
                <p> <%= hash[:value] %></p>
                <p>  <%= hash[:answer] %> </p>
            <% end %>
        <% end %>
    <% end %>


  </div>
</div>